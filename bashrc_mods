# Set default command line editor to vim if it is installed.
if hash vim 2>/dev/null; then
	export VISUAL=vim
	export EDITOR="$VISUAL"
fi

# Add some safety prompts to potentially dangerous commands.
alias cp="cp -i"  # Ask before copying over an existing file.
alias mv="mv -ib" # Ask before overwriting, and make a backup.
alias rm="rm -i"  # Ask before deleting.
